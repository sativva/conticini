  {
    "name": "Urbit",
    "settings": [
      {
        "type": "header",
        "content": "Closing Days"
      },
      {
        "type": "text",
        "id": "week_days",
        "label": "Jours de la semaine fermés",
        "info": "séparer chaque jour par des ';' Ex:(lundi;mardi;)",
        "default": "lundi;"
      },
      {
        "type": "text",
        "id": "specific_day",
        "label": "Date de fermeture exceptionnelle",
        "info": "séparer chaque date par des ';' Ex:(25\/12\/2020;01\/05\/2020;)"
      },
      {
        "type": "text",
        "id": "specific_range_days",
        "label": "Période de fermeture exceptionnelle",
        "info": "Les indiquer le 1er jour de fermeture ainsi que le dernier séparé par un tiret (-). Séparer chaque période de date par des ';' Ex:(01\/08\/2020-15\/08\/2020;01\/08\/2021-15\/08\/2021;)"
      }
    ]
  },
